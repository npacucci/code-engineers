---
export interface Props {
  imgUrl: string;
  title: string;
  subtitle?: string;
  tag?: string;
  description?: string;
}

const { imgUrl, title, tag, subtitle, description } = Astro.props;

---
<div class="flex flex-col items-center">
  <div class="relative cursor-pointer">
    <span class="absolute -right-8 -top-4 bg-yellow p-1 rounded-full border-2 hover:-top-5 hover:bg-green hover:font-bold"> {tag} </span>
    <div class="w-48 h-48 border-2 bg-cover bg-no-repeat rounded-3xl mb-5" style={`background-image:url(${imgUrl})`}></div>
  </div>
  <h3 class="text-2xl font-semibold"> {title} </h3>
  <label class=""> {subtitle} </label>
</div>